<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddBooks">

    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/scancode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:text="scan ISBN "
        android:textColor="@color/black"></Button>

    <TextView
        android:id="@+id/isbnn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/scancode"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:textSize="20dp"
        android:textColor="@color/black"></TextView>


    <TextView
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_below="@id/scancode"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_toStartOf="@+id/isbn"
        android:text="ISBN "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/isbn"
        tools:ignore="UnknownId"></TextView>


    <Button
        android:id="@+id/dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/isbnn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="@color/white"
        android:text="confirm isbn code"
        android:textColor="@color/black"></Button>


    <EditText
        android:id="@+id/bookname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dp"
        android:layout_marginTop="30dp"

        android:hint="book name..."
        android:textColor="@color/black"
   ></EditText>

    <EditText
        android:id="@+id/booklocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/bookname"

        android:textColor="@color/black"
        android:textSize="20dp"
        android:hint="shelf........"
        android:layout_marginTop="20dp"></EditText>



    <EditText
        android:layout_below="@id/booklocation"
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:hint="author........."

        ></EditText>



    <Button
        android:id="@+id/nextt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/author"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:background="@color/white"
        android:text="add book"></Button>


</RelativeLayout>
