<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Issuebook"
    android:background="@color/white"
    >


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/cov"
        android:background="@drawable/isu"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"></ImageView>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/typeISBN"
        android:layout_below="@id/cov"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="please type in book code"

        ></EditText>

    <Button
        android:id="@+id/isbn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/typeISBN"
        android:background="@color/white"
        android:layout_alignParentLeft="true"
        android:text="Scan ISBN"
        ></Button>

    <Button
        android:id="@+id/back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/typeISBN"
        android:background="@color/white"
        android:layout_alignParentRight="true"
        android:text="back"
        ></Button>


    <Button
        android:id="@+id/borroww"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/back"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:text="issue book"></Button>









</RelativeLayout>