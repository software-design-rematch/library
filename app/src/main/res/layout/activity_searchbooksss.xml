<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".searchbooksss">


    <EditText

        android:id="@+id/booknameorauthor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="3dp"
        android:hint="type in book name or author"></EditText>


    <Button
        android:id="@+id/sBOOK"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="SEARCH"
        android:layout_below="@id/booknameorauthor"
        android:layout_alignParentLeft="true"
        ></Button>

    <Button
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/booknameorauthor"
        android:layout_alignParentRight="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_toEndOf="@+id/sBOOK"
        android:layout_toRightOf="@+id/sBOOK"
        android:background="@color/white"
        android:text="BACK"></Button>



    <ScrollView
        android:layout_below="@id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/displayinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"


            ></TextView>




    </ScrollView>



</RelativeLayout>