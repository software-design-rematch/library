<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Delete">
    <Button
        android:id="@+id/scancode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:background="@color/white"

        android:text="scan book ISBN" />




    <EditText
        android:id="@+id/typeinisbn"
        android:layout_below="@id/scancode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="type in isbn"
        android:textColor="@color/black"

        ></EditText>







    <Button
        android:id="@+id/deletebooks"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/typeinisbn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="141dp"
        android:layout_marginRight="141dp"
        android:background="@color/white"
        android:text="delete book"></Button>




    <Button
        android:id="@+id/backk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/deletebooks"
        android:background="@color/white"
        android:text="BACK"
        android:textSize="20dp"


        ></Button>




</RelativeLayout>
